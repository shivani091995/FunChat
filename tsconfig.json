{
	"compilerOptions": {
	  "module": "NodeNext",
	  "moduleResolution": "NodeNext",
	  "target": "ES2020",
	  "rootDir": "./backend/src",
	  "outDir": "./backend/dist",
	  "strict": true,
	  "esModuleInterop": true,
	  "skipLibCheck": true,
	  "allowJs": true,
	  "resolveJsonModule": true
	},
	"ts-node": {
	  "esm": true
	},
	"include": ["backend/src/**/*"],
	"exclude": ["node_modules", "**/*.spec.ts", "frontend"]
  }
  